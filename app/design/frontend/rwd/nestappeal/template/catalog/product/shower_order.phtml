var getClosestValues = function(a, x) {
    var lo, hi;

    for (var i = a.length; i--;) {
	//	alert(a[i]);
        if (a[i] <= x && (lo === undefined || lo < a[i])) lo = a[i];
        if (a[i] >= x && (hi === undefined || hi > a[i])) hi = a[i];
    };
	
	
	if(!lo){
		return hi;	
	}else{
		return lo;	
	}
	
    
}
			
