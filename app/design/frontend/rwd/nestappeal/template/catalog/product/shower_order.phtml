function roundVal(val){
	val = val.toString().split('.');
	var val_prev = parseFloat(val[0]);
	var val_precision = parseFloat(val[1]);
	if(val_precision < '13'){ val = val_prev+'.0'; }
	if(val_precision >= '13' && val_precision < '38'){ val = val_prev+'.25'; }
	if(val_precision >= '38' && val_precision < '63'){ val = val_prev+'.50'; }
	if(val_precision >= '63' && val_precision < '88'){ val = val_prev+'.75'; }
	if(val_precision >= '88'){ val = (val_prev+1)+'.0'; }
	return val;
}


